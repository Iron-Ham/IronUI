ype":"swift","content":["import IronUI","","\/\/\/ Create a new database with a name","var database = IronDatabase(name: \"My Tasks\")"],"syntax":"swift","type":"file","identifier":"database-01-create.swift","highlights":[]},"doc://IronDataDisplay/tutorials/IronDataDisplayTutorials/Database-Tables":{"kind":"article","role":"article","title":"Database Tables","abstract":[],"type":"topic","identifier":"doc:\/\/IronDataDisplay\/tutorials\/IronDataDisplayTutorials\/Database-Tables","url":"\/tutorials\/irondatadisplaytutorials\/database-tables"},"doc://IronDataDisplay/tutorials/IronDataDisplay/BuildingWithIronKanban#Custom-Cards-with-Priority-Indicators":{"kind":"section","url":"\/tutorials\/irondatadisplay\/buildingwithironkanban#Custom-Cards-with-Priority-Indicators","abstract":[{"type":"text","text":"Learn how to create drag-and-drop Kanban boards for task management,"},{"type":"text","text":" "},{"type":"text","text":"project planning, and workflow visualization."}],"title":"Custom Cards with Priority Indicators","type":"section","identifier":"doc:\/\/IronDataDisplay\/tutorials\/IronDataDisplay\/BuildingWithIronKanban#Custom-Cards-with-Priority-Indicators","role":"pseudoSymbol"},"database-10-complete.swift":{"fileName":"TaskTracker.swift","identifier":"database-10-complete.swift","fileType":"swift","type":"file","syntax":"swift","content":["import IronUI","import SwiftUI","","struct TaskTracker: View {","","  \/\/ MARK: Lifecycle","","  init() {","    var db = IronDatabase(name: \"Task Tracker\")","","    \/\/ Define columns","    let titleColumn = db.addColumn(name: \"Task\", type: .text)","    let statusColumn = db.addColumn(name: \"Status\", type: .select, options: [","      IronSelectOption(name: \"Backlog\", color: .secondary),","      IronSelectOption(name: \"To Do\", color: .info),","      IronSelectOption(name: \"In Progress\", color: .warning),","      IronSelectOption(name: \"Review\", color: .primary),","      IronSelectOption(name: \"Done\", color: .success),","    ])","    let priorityColumn = db.addColumn(name: \"Priority\", type: .select, options: [","      IronSelectOption(name: \"Low\", color: .secondary),","      IronSelectOption(name: \"Medium\", color: .warning),","      IronSelectOption(name: \"High\", color: .error),","    ])","    let assigneeColumn = db.addColumn(name: \"Assignee\", type: .person)","    let dueDateColumn = db.addColumn(name: \"Due Date\", type: .date)","    let tagsColumn = db.addColumn(name: \"Tags\", type: .multiSelect, options: [","      IronSelectOption(name: \"Bug\", color: .error),","      IronSelectOption(name: \"Feature\", color: .success),","      IronSelectOption(name: \"Chore\", color: .secondary),","    ])","","    \/\/ Add sample data","    let row1 = db.addRow()","    db.setValue(.text(\"Fix login bug\"), for: row1.id, column: titleColumn.id)","    db.setValue(.select(statusColumn.options[2].id), for: row1.id, column: statusColumn.id)","    db.setValue(.select(priorityColumn.options[2].id), for: row1.id, column: priorityColumn.id)","    db.setValue(.person(IronPerson(name: \"Alice\")), for: row1.id, column: assigneeColumn.id)","    db.setValue(.date(Date()), for: row1.id, column: dueDateColumn.id)","    db.setValue(.multiSelect(Set([tagsColumn.options[0].id])), for: row1.id, column: tagsColumn.id)","","    let row2 = db.addRow()","    db.setValue(.text(\"Add dark mode\"), for: row2.id, column: titleColumn.id)","    db.setValue(.select(statusColumn.options[1].id), for: row2.id, column: statusColumn.id)","    db.setValue(.select(priorityColumn.options[1].id), for: row2.id, column: priorityColumn.id)","    db.setValue(.person(IronPerson(name: \"Bob\")), for: row2.id, column: assigneeColumn.id)","    db.setValue(.multiSelect(Set([tagsColumn.options[1].id])), for: row2.id, column: tagsColumn.id)","","    let row3 = db.addRow()","    db.setValue(.text(\"Update dependencies\"), for: row3.id, column: titleColumn.id)","    db.setValue(.select(statusColumn.options[0].id), for: row3.id, column: statusColumn.id)","    db.setValue(.select(priorityColumn.options[0].id), for: row3.id, column: priorityColumn.id)","    db.setValue(.multiSelect(Set([tagsColumn.options[2].id])), for: row3.id, column: tagsColumn.id)","","    _database = State(initialValue: db)","  }","","  \/\/ MARK: Internal","","  var body: some View {","    NavigationStack {","      IronDatabaseTable(","        database: $database,","        onAddRow: {","          _ = database.addRow()","        },","        onAddColumn: {","          \/\/ In a real app, show column creation UI","        },","      )","      .navigationTitle(\"Task Tracker\")","      .toolbar {","        ToolbarItem(placement: .primaryAction) {","          Button {","            _ = database.addRow()","          } label: {","            Label(\"Add Task\", systemImage: \"plus\")","          }","        }","      }","    }","  }","","  \/\/ MARK: Private","","  @State private var database: IronDatabase","","}"],"highlights":[]},"doc://IronDataDisplay/tutorials/IronDataDisplayTutorials/Timeline-Visualization":{"kind":"article","url":"\/tutorials\/irondatadisplaytutorials\/timeline-visualization","abstract":[],"title":"Timeline Visualization","type":"topic","identifier":"doc:\/\/IronDataDisplay\/tutorials\/IronDataDisplayTutorials\/Timeline-Visualization","role":"article"},"doc://IronDataDisplay/tutorials/IronDataDisplay/BuildingWithIronTimeline#Creating-a-Basic-Timeline":{"kind":"section","url":"\/tutorials\/irondatadisplay\/buildingwithirontimeline#Creating-a-Basic-Timeline","abstract":[{"type":"text","text":"Learn how to create beautiful timeline visualizations for activity feeds,"},{"type":"text","text":" "},{"type":"text","text":"project roadmaps, and historical event displays."}],"title":"Creating a Basic Timeline","type":"section","identifier":"doc:\/\/IronDataDisplay\/tutorials\/IronDataDisplay\/BuildingWithIronTimeline#Creating-a-Basic-Timeline","role":"pseudoSymbol"},"doc://IronDataDisplay/tutorials/IronDataDi