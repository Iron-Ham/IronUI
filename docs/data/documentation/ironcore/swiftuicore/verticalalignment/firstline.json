{"metadata":{"role":"symbol","title":"firstLine","modules":[{"relatedModules":["SwiftUICore"],"name":"IronCore"}],"extendedModule":"SwiftUICore","fragments":[{"text":"static","kind":"keyword"},{"text":" ","kind":"text"},{"text":"let","kind":"keyword"},{"text":" ","kind":"text"},{"text":"firstLine","kind":"identifier"},{"text":": ","kind":"text"},{"text":"VerticalAlignment","kind":"typeIdentifier","preciseIdentifier":"s:7SwiftUI17VerticalAlignmentV"}],"roleHeading":"Type Property","symbolKind":"property","externalID":"s:7SwiftUI17VerticalAlignmentV8IronCoreE9firstLineACvpZ"},"kind":"symbol","identifier":{"url":"doc:\/\/IronCore\/documentation\/IronCore\/SwiftUICore\/VerticalAlignment\/firstLine","interfaceLanguage":"swift"},"schemaVersion":{"minor":3,"patch":0,"major":0},"sections":[],"hierarchy":{"paths":[["doc:\/\/IronCore\/documentation\/IronCore","doc:\/\/IronCore\/documentation\/IronCore\/SwiftUICore","doc:\/\/IronCore\/documentation\/IronCore\/SwiftUICore\/VerticalAlignment"]]},"abstract":[{"text":"Aligns content to the center of the first line of text.","type":"text"}],"primaryContentSections":[{"declarations":[{"tokens":[{"kind":"keyword","text":"static"},{"kind":"text","text":" "},{"kind":"keyword","text":"let"},{"kind":"text","text":" "},{"kind":"identifier","text":"firstLine"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"VerticalAlignment","preciseIdentifier":"s:7SwiftUI17VerticalAlignmentV"}],"platforms":["macOS"],"languages":["swift"]}],"kind":"declarations"},{"content":[{"text":"Discussion","anchor":"discussion","level":2,"type":"heading"},{"inlineContent":[{"text":"This alignment is analogous to the default behavior of SwiftUI’s ","type":"text"},{"code":"Label","type":"codeVoice"},{"text":", where","type":"text"},{"text":" ","type":"text"},{"text":"the icon is vertically centered with the first line of the label text. Unlike","type":"text"},{"text":" ","type":"text"},{"code":"Label","type":"codeVoice"},{"text":", this alignment can be used with any view, any spacing, and any number","type":"text"},{"text":" ","type":"text"},{"text":"of subviews.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"The alignment uses SwiftUI’s text baseline alignment guides to calculate the","type":"text"},{"text":" ","type":"text"},{"text":"center of the first line. It works by finding the difference between the first","type":"text"},{"text":" ","type":"text"},{"text":"and last text baselines, then computing the midpoint of the remaining height.","type":"text"}],"type":"paragraph"},{"text":"Usage","anchor":"Usage","level":2,"type":"heading"},{"inlineContent":[{"text":"Use ","type":"text"},{"code":".firstLine","type":"codeVoice"},{"text":" as the alignment parameter for ","type":"text"},{"code":"HStack","type":"codeVoice"},{"text":":","type":"text"}],"type":"paragraph"},{"syntax":"swift","type":"codeListing","code":["HStack(alignment: .firstLine, spacing: 12) {","  Image(systemName: \"star.fill\")","    .foregroundStyle(.yellow)","  VStack(alignment: .leading) {","    Text(\"First Line\")","      .font(.headline)","    Text(\"Second Line\")","    Text(\"Third Line\")","  }","}"]},{"inlineContent":[{"text":"The star icon will be vertically centered with “First Line”, regardless of how","type":"text"},{"text":" ","type":"text"},{"text":"many additional lines of text appear below.","type":"text"}],"type":"paragraph"},{"text":"Common Use Cases","anchor":"Common-Use-Cases","level":2,"type":"heading"},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Timeline entries"}],"type":"strong"},{"text":": Align node indicators with the first line of event descriptions","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"List items"}],"type":"strong"},{"text":": Align icons or checkboxes with the first line of multiline labels","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Form fields"}],"type":"strong"},{"text":": Align validation icons with the first line of error messages","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Comments\/Reviews"}],"type":"strong"},{"text":": Align avatars with the first line of comment text","type":"text"}],"type":"paragraph"}]}]},{"text":"How It Works","anchor":"How-It-Works","level":2,"type":"heading"},{"inlineContent":[{"text":"The alignment calculates:","type":"text"}],"type":"paragraph"},{"type":"orderedList","items":[{"content":[{"inlineContent":[{"text":"The height after the first line: ","type":"text"},{"code":"lastTextBaseline - firstTextBaseline","type":"codeVoice"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"The height of the first line: ","type":"text"},{"code":"totalHeight - heightAfterFirstLine","type":"codeVoice"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"The center point: ","type":"text"},{"code":"heightOfFirstLine \/ 2","type":"codeVoice"}],"type":"paragraph"}]}]},{"inlineContent":[{"text":"This positions the alignment guide at the vertical center of the first line of text.","type":"text"}],"type":"paragraph"}],"kind":"content"}],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/ironcore\/swiftuicore\/verticalalignment\/firstline"]}],"references":{"doc://IronCore/documentation/IronCore/SwiftUICore":{"title":"SwiftUICore","abstract":[],"identifier":"doc:\/\/IronCore\/documentation\/IronCore\/SwiftUICore","url":"\/documentation\/ironcore\/swiftuicore","role":"collection","kind":"symbol","type":"topic"},"doc://IronCore/documentation/IronCore/SwiftUICore/VerticalAlignment":{"identifier":"doc:\/\/IronCore\/documentation\/IronCore\/SwiftUICore\/VerticalAlignment","abstract":[{"text":"Provides first-line text alignment for use in HStack layouts.","type":"text"}],"kind":"symbol","title":"VerticalAlignment","type":"topic","navigatorTitle":[{"te