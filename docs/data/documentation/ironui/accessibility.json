{"hierarchy":{"paths":[["doc:\/\/IronUI\/documentation\/IronUI"]]},"sections":[],"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/IronUI\/documentation\/IronUI\/Accessibility"},"schemaVersion":{"major":0,"patch":0,"minor":3},"seeAlsoSections":[{"generated":true,"identifiers":["doc:\/\/IronUI\/documentation\/IronUI\/GettingStarted","doc:\/\/IronUI\/documentation\/IronUI\/Theming"],"anchor":"Essentials","title":"Essentials"}],"primaryContentSections":[{"kind":"content","content":[{"type":"heading","level":2,"anchor":"Overview","text":"Overview"},{"type":"paragraph","inlineContent":[{"text":"IronUI is built with accessibility as a core principle. Every component supports VoiceOver, Dynamic Type, and reduced motion preferences out of the box.","type":"text"}]},{"anchor":"VoiceOver-Support","level":2,"type":"heading","text":"VoiceOver Support"},{"type":"paragraph","inlineContent":[{"type":"text","text":"All IronUI components provide meaningful accessibility labels and traits."}]},{"type":"heading","level":3,"text":"Automatic Labeling","anchor":"Automatic-Labeling"},{"inlineContent":[{"type":"text","text":"Components automatically generate appropriate labels:"}],"type":"paragraph"},{"code":["\/\/ Automatically announces \"Primary button, Submit\"","IronButton(\"Submit\", variant: .filled) { }","","\/\/ Announces \"Toggle, Enable notifications, On\"","IronToggle(\"Enable notifications\", isOn: $isEnabled)","","\/\/ Announces \"Avatar for John Doe, Online\"","IronAvatar(name: \"John Doe\", status: .online)"],"syntax":"swift","type":"codeListing"},{"anchor":"Custom-Labels","level":3,"type":"heading","text":"Custom Labels"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Override default labels when needed:"}]},{"code":["IronButton(\"\", variant: .filled, leadingIcon: \"plus\") { }","    .accessibilityLabel(\"Add new item\")","","IronIcon(systemName: \"star.fill\", color: .warning)","    .accessibilityLabel(\"Favorite\")"],"syntax":"swift","type":"codeListing"},{"text":"Composite Elements","anchor":"Composite-Elements","type":"heading","level":3},{"type":"paragraph","inlineContent":[{"type":"text","text":"IronUI combines related elements for efficient VoiceOver navigation:"}]},{"syntax":"swift","code":["\/\/ Chip with icon + label + dismiss = single VoiceOver element","IronChip(\"Swift\", icon: \"swift\") {","    \/\/ dismiss action","}","\/\/ Announces: \"Swift, Removable, Button. Actions available: Remove\""],"type":"codeListing"},{"type":"heading","anchor":"Dynamic-Type","level":2,"text":"Dynamic Type"},{"inlineContent":[{"text":"IronUI scales appropriately with the user’s preferred text size.","type":"text"}],"type":"paragraph"},{"text":"Automatic Scaling","level":3,"type":"heading","anchor":"Automatic-Scaling"},{"inlineContent":[{"type":"text","text":"All text and text-related measurements scale with Dynamic Type:"}],"type":"paragraph"},{"syntax":"swift","code":["\/\/ Text automatically scales","IronText(\"Welcome\", style: .headlineLarge, color: .primary)","","\/\/ Icons scale proportionally","IronIcon(systemName: \"star\", size: .medium, color: .primary)","","\/\/ Spacing adapts to maintain visual balance","IronButton(\"Submit\", size: .large) { }"],"type":"codeListing"},{"type":"heading","level":3,"text":"ScaledMetric Usage","anchor":"ScaledMetric-Usage"},{"type":"paragraph","inlineContent":[{"text":"Components use ","type":"text"},{"code":"@ScaledMetric","type":"codeVoice"},{"text":" for consistent scaling:","type":"text"}]},{"syntax":"swift","code":["struct MyComponent: View {","    @ScaledMetric(relativeTo: .body) private var iconSize: CGFloat = 20","","    var body: some View {","        Image(systemName: \"star\")","            .frame(width: iconSize, height: iconSize)","    }","}"],"type":"codeListing"},{"anchor":"Testing-Dynamic-Type","text":"Testing Dynamic Type","level":3,"type":"heading"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Test your interfaces across the full range of sizes:"}]},{"type":"unorderedList","items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"Extra Small"}]},{"type":"text","text":" - Smallest readable size"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"text":"Large","type":"text"}],"type":"strong"},{"text":" - System default","type":"text"}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"XXX-Large"}]},{"text":" - Large text preference","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"Accessibility XXX-Large"}]},{"type":"text","text":" - Maximum accessibility size"}]}]}]},{"type":"heading","text":"Reduced Motion","anchor":"Reduced-Motion","level":2},{"type":"paragraph","inlineContent":[{"type":"text","text":"IronUI respects the user’s reduced motion preference."}]},{"anchor":"Automatic-Adaptation","type":"heading","text":"Automatic Adaptation","level":3},{"type":"paragraph","inlineContent":[{"type":"text","text":"Animations automatically simplify when reduced motion is enabled:"}]},{"syntax":"swift","code":["\/\/ Uses spring animation normally, instant transition with reduced motion","IronButton(\"Tap me\") { }","","\/\/ Progress spinner stops animated when reduced motion is on","IronSpinner()"],"type":"codeListing"},{"text":"Manual Checking","anchor":"Manual-Checking","type":"heading","level":3},{"type":"paragraph","inlineContent":[{"text":"Check the preference manually for custom animations:","type":"text"}]},{"syntax":"swift","code":["struct MyView: View {","    @Environment(\\.accessibilityReduceMotion) private var reduceMotion","","    var body: some View {","        content","            .animation(reduceMotion ? nil : .spring(), value: isExpanded)","    }","}"],"type":"codeListing"},{"level":3,"text":"Accessible Animation Modifier","anchor":"Accessible-Animation-Modifier","type":"heading"},{"in